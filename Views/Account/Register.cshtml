@model MemberRegisterViewModel
@{
	ViewData["Title"] = "Register";
}



<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<!-- Login Form s-->
				<form  method="post">
					<div class="login-form">
						<h4 class="login-title">Qeydiyyat</h4>
						<div class="row">
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Name">Ad</label>
								<input asp-for="Name" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="Name"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Surename">Soyad</label>
								<input asp-for="Surename" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="Surename"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Email">Email</label>
								<input asp-for="Email" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="Email"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Phone">Nömrə</label>
								<input asp-for="Phone" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="Phone"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="UserName">UserName</label>
								<input asp-for="UserName" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="UserName"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Password">Şifrə</label>
								<input asp-for="Password" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="ConfirmPassword">Şifrəni Təsdiqlə</label>
								<input asp-for="ConfirmPassword" class="mb-0 form-control">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
							</div>
							<div class="col-md-12">
								<button type="submit" class="btn btn-outlined">Qeydiyyatden Keç</button>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
				<img alt="" src="~/img/logo.jpeg"/>
			</div>

		</div>
	</div>
</main>

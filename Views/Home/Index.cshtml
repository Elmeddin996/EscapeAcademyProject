</div>
<!-- About End -->
<!-- Categories Start -->
<div class="container-xxl py-5 category">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title bg-white text-center text-primary px-3">Kateqoriyalar</h5>
            <h1 class="mb-5">Kurs Kateqoriyaları</h1>
        </div>
        <div class="row g-3">
            <div class="col-lg-12 col-md-6">
                <div class="row g-3">
               @foreach (var item in Model.Categories)
                    {
                        <div class="col-lg-4 col-md-12 wow zoomIn" data-wow-delay="0.5s">
                            <a class="position-relative d-block overflow-hidden" asp-controller="courses" asp-action="index">
                                <img class="img-fluid" src="~/uploads/categories/@item.Image" alt="" style="max-height:205px">
                                <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                                    <h5 class="m-0">@item.CategoryName</h5>
                                    <small class="text-primary">@item.Courses.Count  Qrup</small>
                                </div>
                            </a>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Categories Start -->
<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Kurslar</h6>
            <h1 class="mb-5">Ən Populyar Kurslar</h1>
        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model.PopularCourses)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="~/uploads/courses/@item.Image" alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a asp-controller="contact" asp-action="index" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Ətraflı Məlumat</a>
                                <a asp-controller="contact" asp-action="index" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Əlaqə Saxla</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            @*<h3 class="mb-0">$149.00</h3>*@
                            <h5 class="mb-4">@item.Name</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Teacher.Name @item.Teacher.Surename</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.CourseTime  Saat</small>
                            <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>@item.StudentCount Tələbə</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses End -->
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Instructors</h6>
            <h1 class="mb-5">Peşəkar Komandamız</h1>
        </div>
        <div class="row g-4">
           @foreach (var item in Model.ExpertTeachers)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src="~/uploads/teachers/@item.Image" alt="">
                        </div>
                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@item.Name @item.Surename</h5>
                            <small>@item.Subject</small>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Team End -->
<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Tələbə Rəyi</h6>
            <h1 class="mb-5">Our Students Say!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel position-relative">
           @foreach (var item in Model.Students)
            {
                 <div class="testimonial-item text-center">
                <img class="border rounded-circle p-2 mx-auto mb-3" src="~/uploads/students/@item.Image" style="width: 80px; height: 80px;">
                <h5 class="mb-0">@item.FullName</h5>
                <p>@item.Profession</p>
                <div class="testimonial-text bg-light text-center p-4">
                    <p class="mb-0">@item.Comment</p>
                </div>
            </div>
            }
            
        </div>
    </div>
</div>
<!-- Testimonial End -->

@model List<Teacher>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item text-center pt-3">
                    <div class="p-4" style="height:288px;">
                        <i class="fa fa-3x fa-certificate text-primary mb-4"></i>
                        <h5 class="mb-3">Keyfiyyət</h5>
                        <p>Təlimlərimizi və Xidmətlərimizi yüksək keyfiyyətlə təmin edirik.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item text-center pt-3">
                    <div class="p-4" style="height:288px;">
                        <i class="fa fa-3x fas fa-hands text-primary mb-4"></i>
                        <h5 class="mb-3">Məsuliyyət</h5>
                        <p>Tələbələrimizə və təhsil prosesinə qarşı tam məsuliyyət daşıyırıq</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item text-center pt-3">
                    <div class="p-4" style="height:288px;">
                        <i class="fa fa-3x fa-sort-amount-up text-primary mb-4"></i>
                        <h5 class="mb-3">İnnovasiya </h5>
                        <p>Yenilikçilik və yaradıcılığı dəstəkləyir , müəssisədə yeniliklərə açıq mühit yaradırıq</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="service-item text-center pt-3">
                    <div class="p-4" style="height:288px;">
                        <i class="fa fa-3x fas fa-chart-line text-primary mb-4"></i>
                        <h5 class="mb-3">Məşğulluq və İnkişaf</h5>
                        <p>İnkişaf və təcrübə üçün geniş imkanlar təmin edirik. </p>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>
<!-- Service End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="img-fluid position-absolute w-100 h-100" src="img/about.jpg" alt="" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                <h6 class="section-title bg-white text-start text-primary pe-3">Haqqımızda</h6>
                <h1 class="mb-4">Escape Academy</h1>
                <p class="mb-4">
                    2017 -ci ildən etibarən təhsil sahəsində fəaliyyət göstərən bir müəssədir.
                    Bizim əsas fəaliyyətimiz dil dərsləri (İngilis, Rus, Alman, Ərəb və s ) , Maliyyə və Mühasibatlıq, Abituriyent,
                    Magistratura, Doktorantura,  IT sahəsi üzrə hazırlıqları təmin etməkdir.
                </p>
                <p class="mb-4">
                    Vizion: <br /> 
                    Biz təlim və təcrübə vasitələri ilə tələbələrimizi beynəlxalq standartlara cavab verən
                    və müasir dünyanın tələbləri kimi yetişdirməyə çalışırıq.<br />
                    Missyamız: <br/> 
                    Missiyamız isə tələbələrimizin akademik məqsədlərinə nail olmalarına və onların
                    peşəkar sahələrdə müvəffəqiyyətlər qazanmağına köməklik göstərməkdir.
                </p>
                <div class="row gy-2 gx-4 mb-4">
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Keyfiyyət</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Məsuliyyət</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>İnnovasiya</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Məşğulluq və İnkişaf</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Əməkdaşlıq və Həmrəylik</p>
                    </div>
                </div>
                <a class="btn btn-primary py-3 px-5 mt-2" asp-controller="contact" asp-action="index">Elə indi müraciət et!</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Müəllimlər</h6>
            <h1 class="mb-5">Komandamız</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src="~/uploads/teachers/@item.Image" alt="">
                        </div>
                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-sm-square btn-primary mx-1" href=""><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@item.Name @item.Surename</h5>
                            <small>@item.Subject</small>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Team End -->